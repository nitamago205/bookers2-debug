<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"50x50" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <% if @books.favorited_by?(current_user) %>
           <td>
            <%= link_to book_favorites_path(@books), method: :delete do %>
             ♥<%= @books.favorites.count %>
            <% end %>
           </td>
          <% else %>
           <td>
            <%= link_to book_favorites_path(@books), method: :post do %>
             ♡<%= @books.favorites.count %>
            <% end %>
           </td>
          <% end %>
          <td>コメント数: <%= @books.book_comments.count %></td>
          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
       </tr>
     </table>
     <table>
     <% @books.book_comments.each do |book_comment| %>
      <tr>
        <td>
         <%= link_to(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
          <%= book_comment.user.name %>
         <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
         <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
     <% end %>
     </table>
      <div class="form-group">
       <%= form_with model: [@books, @book_comment] do |f| %>
        <%= f.text_area :comment, class: 'w-100' %><br>
        <%= f.submit "送信" %>
       <% end %>
      </div>
    </div>
  </div>
</div>